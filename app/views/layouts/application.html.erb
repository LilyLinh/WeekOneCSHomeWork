<!DOCTYPE html>
<html>
  <head>
    <title>Restaurant</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-light bg-faded">
  <a class="navbar-brand" href="#">Navbar</a>
  <ul class="nav navbar-nav">
    <li class="nav-item <%= 'active' if current_page?(root_path) %>">
      <a class="nav-link" href="<%= root_path %>">Home <span class="sr-only">(current)</span></a>
    </li>
    <li class="nav-item <%= 'active' if current_page?(menu_path) %>">
      <%= link_to "Menu", menu_path, class: 'nav-link'%>
    </li>
    <li class="nav-item <%= 'active' if current_page?(contact_us_path) %>">
      <%= link_to "Contact Us", contact_us_path, class: 'nav-link' %>
    </li>
  </ul>
  
</nav>
<div class="container">
<form class="form-inline pull-xs-right" action="/menu" method="GET">
     <%= text_field_tag :search, params[:search], class: "form-control",placeholder: "Search" %>
     <button class="btn btn-success-outline" type="submit">Search</button>
   </form>
  
  
</div>
  <div class="container">

  <%= yield %>
  </div>
  </body>
</html>
