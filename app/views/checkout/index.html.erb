<h1>Thank you for ordering. Let's enjoy!</h1>

<%= form_for @order, url: checkout_confirm_path, method: 'post' do |f| %>
 <% if @order.errors.present? %>
  <div class="alert alert-danger">
   <%= @order.errors.full_messages.to_sentence %>
   </div>
   <% end %>

 <div class="form-group">
  <%= f.label :name %>
  <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
   <%= f.label :address %>
   <%= f.text_area :address, class: 'form-control' %>
  </div>

  <div class="container">
   <h2> Your Order </h2>
  <table class="table table-sm table-striped">
   <% @order.order_items.each do |order_item| %>
   <tr>
    <td><%= order_item.food_item.name %></td>
    <td><%= order_item.food_item.price %></td>
 
    
	</tr>
	<% end %>
	</table>
	</div>
	<div>
	Price: <%= number_to_currency @order.total_price %>
	</div>


  <div class="container">

  <%= f.submit "Confirm", class: 'btn btn-secondary' %>

  <% end %>

 </div>